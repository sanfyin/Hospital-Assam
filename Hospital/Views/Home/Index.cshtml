
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Layout.cshtml";
}


<!-- Slider Start -->
<section class="banner">
	<div class="container">
		<div class="row">
			<div class="col-lg-6 col-md-12 col-xl-7">
				<div class="block">
					<div class="divider mb-3"></div>
					<span class="text-uppercase text-sm letter-spacing ">Total Health care solution</span>
					<h1 class="mb-3 mt-3">Your most trusted health partner</h1>

					<p class="mb-4 pr-5">We are a multi speciality hospital that provides quality and affordable healthcare services to the people of Assam and North East.</p>
					<div class="btn-container ">
						<a href="~/home/appointment" target="_blank" class="btn btn-main-2 btn-icon btn-round-full">Make appoinment <i class="icofont-simple-right ml-2  "></i></a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="features">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="feature-block d-lg-flex">
					<div class="feature-item mb-5 mb-lg-0">
						<div class="feature-icon mb-4">
							<i class="icofont-surgeon-alt"></i>
						</div>
						<span>24 Hours Service</span>
						<h4 class="mb-3">On Call Appoinment</h4>
						<p class="mb-4">Get All time support for emergency.We have introduced the principle of family medicine.</p>
						<a href="~/home/appointment" class="btn btn-main btn-round-full">Make appoinment</a>
					</div>

					<div class="feature-item mb-5 mb-lg-0">
						<div class="feature-icon mb-4">
							<i class="icofont-ui-clock"></i>
						</div>
						<span>Timing schedule</span>
						<h4 class="mb-3">OPD Working Hours</h4>
						<ul class="w-hours list-unstyled">
							<li class="d-flex justify-content-between">Mon - Sun : <span>9AM - 5:30PM</span></li>
						</ul>
					</div>

					<div class="feature-item mb-5 mb-lg-0">
						<div class="feature-icon mb-4">
							<i class="icofont-support"></i>
						</div>
						<span>Emegency Cases</span>
						<h4 class="mb-3">+91 60013 59912</h4>
						<p>Get All time support for emergency.We have introduced the principle of family medicine.Get Conneted with us for any urgency .</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


<section class="section about">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-4 col-sm-6">
				<div class="about-img">
					<img src="~/images/about/img-1.jpg" alt="" class="img-fluid">
					<img src="~/images/about/img-2.jpg" alt="" class="img-fluid mt-4">
				</div>
			</div>
			<div class="col-lg-4 col-sm-6">
				<div class="about-img mt-4 mt-lg-0">
					<img src="~/images/about/img-3.jpg" alt="" class="img-fluid">
				</div>
			</div>
			<div class="col-lg-4">
				<div class="about-content pl-4 mt-4 mt-lg-0">
					<h2 class="title-color">Personal care <br>& healthy living</h2>
					<p class="mt-4 mb-5">At our hospital, we care about your well-being beyond your medical needs. We offer personal care and support services to help you with your daily activities and hygiene. Our trained and compassionate staff can assist you with bathing, dressing, grooming, toileting, feeding, mobility, and medication reminders. We can also provide you with equipment and supplies to make your life easier and safer. Our personal care services are tailored to your individual needs and preferences, and we respect your privacy and dignity at all times.</p>

					<a href="~/home/department" class="btn btn-main-2 btn-round-full btn-icon">Services<i class="icofont-simple-right ml-3"></i></a>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="section service gray-bg">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-7 text-center">
				<div class="section-title">
					<h2>Facilities</h2>
					<div class="divider mx-auto my-4"></div>
					<p>Our hospital offers a wide range of facilities to meet the diverse needs of our patients.</p>
				</div>
			</div>
		</div>

		<div class="row">

			@foreach (var item in Hospital.Data.HospitalData.Facilities)
			{		
			
				<div class="col-lg-4 col-md-6 col-sm-6">
					<div class="service-item mb-4">
						<div class="icon d-flex align-items-center">
							<i class="icofont-@item.Icon text-lg"></i>
							<h4 class="mt-3 mb-3">@item.Name</h4>
						</div>

						<div class="content">
							<p class="mb-4"></p>
						</div>
					</div>
				</div>
			}
			
	</div>
</section>
<section class="section appoinment">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-6 ">
				<div class="appoinment-content">
					<img src="~/images/about/img-3.jpg" alt="" class="img-fluid">
					<div class="emergency">
						<h2 class="text-lg"><i class="icofont-phone-circle text-lg"></i>+91 60013 59912</h2>
					</div>
				</div>
			</div>
			<div class="col-lg-6 col-md-10 ">
				<div class="appoinment-wrap mt-5 mt-lg-0">
					<h2 class="mb-2 title-color">Book appoinment</h2>
					<p class="mb-4">
						To book an appointment with our hospital, please select doctor and give us a call at +91 60013 59912
						<form id="#" class="appoinment-form" method="post" action="#">
							<div class="row">
								<div class="col-lg-12">
									<div class="form-group">
										<select class="form-control" id="exampleFormControlSelect1">
											<option>Choose Doctor</option>
											@foreach (var item in Hospital.Data.HospitalData.Doctors)
											{
												<option>@(item.Name), @(item.Qualification), @(item.Designation), @item.Department</option>
											}
											<option>Others</option>
										</select>
									</div>
								</div>

								<h4 class="text-color mt-3">Please call +91 60013 59912 for appointment </h4>
							</div>
						</form>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="section testimonial-2 gray-bg">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-7">
				<div class="section-title text-center">
					<h2>We have served many happy Patients</h2>
					<div class="divider mx-auto my-4"></div>
					<p></p>
				</div>
			</div>
		</div>
	</div>

	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-12 testimonial-wrap-2">
				
			</div>
		</div>
	</div>
</section>
<section class="section clients">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-7">
				<div class="section-title text-center">
					<h2>Partners who support us</h2>
					<div class="divider mx-auto my-4"></div>
					</div>
			</div>
		</div>
	</div>

	<div class="container">
		<div class="row clients-logo">
			
		</div>
	</div>
</section>

